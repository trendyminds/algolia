	first: true,
	instructions: 'Your Application ID found in the "API keys" section of your Algolia account',
	label: 'Application ID',
	id: 'applicationId',
	name: 'applicationId',
	value: settings['applicationId'],
	suggestEnvVars: true
}) }}

